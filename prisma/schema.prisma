generator client {
  provider = "prisma-client"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// ENUMS

enum Role {
  ADMIN
  SELLER
  CUSTOMER
}

enum UserStatus {
  ACTIVE
  BANNED
}

enum OrderStatus {
  PLACED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

/// MODELS

model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  password String
  role     Role       @default(CUSTOMER)
  status   UserStatus @default(ACTIVE)

  // relations
  medicines Medicine[] @relation("SellerMedicines")
  orders    Order[]
  reviews   Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

