
enum Role {
  CUSTOMER
  SELLER
  ADMIN
}


enum UserStatus {
  ACTIVE
  BANNED
}


model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  password String
  role     Role       @default(CUSTOMER)
  status   UserStatus @default(ACTIVE)

  // relations
  medicines Medicine[] @relation("SellerMedicines")
  orders    Order[]
  reviews   Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

